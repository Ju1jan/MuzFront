{% extends "::base.html.twig" %}

{% block title %}MuzFront::index{% endblock %}

{% block body %}
    <div id="storage"
         data-ajax-url="{{ url('get') }}"
         data-artists-count="{{ artists|length }}"
         data-countries-count="{{ countries|length }}">
    </div>

    <div class="col-md-8">

        <h2 class="page-header">Welcome to the MuzFront project!</h2>

        <div id="dynamicContent">
            <table class="table table-striped table-responsive">
                <thead>
                <tr>
                    <th>Artist</th>
                    <th>Song</th>
                    <th>Country</th>
                    <th>Genre</th>
                    <th>Year</th>
                </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
            <nav>
                <ul class="pagination">
                    <li>
                        {#<a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>#}
                    </li>
                    <li>
                        {#<a href="#">0</a>#}
                    </li>
                    <li>
                        {#<a href="#" aria-label="Next"><span aria-hidden="true">&raquo;</span></a>#}
                    </li>
                </ul>
            </nav>
            <div class="in-progress">
                <p>
                    <span class="glyphicon glyphicon-refresh rotating"></span>
                </p>
            </div>
        </div>

    </div>

    <div class="col-md-4">

        <h2 class="page-header">Filter</h2>

        <section id="filter">

            <div class="filter-block">
                <h4>Song's Artist</h4>
                <div class="form-group">
                    <select name="aid" class="form-control">
                        <option value="0">Any value</option>
                        {% for i,entity in artists %}
                            <option value="{{ entity.id }}" {{ (aid == entity.id) ? ' selected' : '' }}>{{ entity.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="filter-block">
                <h4>Artist's Country</h4>
                <div class="form-group">
                    <select name="cid" class="form-control">
                        <option value="0">Any value</option>
                        {% for i,entity in countries %}
                            <option value="{{ entity.id }}" {{ (cid == entity.id) ? ' selected' : '' }}>{{ entity.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="filter-block">
                <h4>Artist's Genre</h4>
                <div class="form-group">
                    <select name="gid" class="form-control">
                        <option value="0">Any value</option>
                        {% for i,entity in genres %}
                            <option value="{{ entity.id }}" {{ (gid == entity.id) ? ' selected' : '' }}>{{ entity.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="filter-block">
                <h4>Song's Year</h4>
                <div class="form-group">
                    <select name="year" class="form-control">
                        <option value="0">Any value</option>
                        {% for i,entity in years %}
                            <option value="{{ entity.id }}" {{ (year == entity.year) ? ' selected' : '' }}>{{ entity.year }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </section>

    </div>


{% endblock %}
